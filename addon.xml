    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">LINE Notify Wrapper</summary>
    <summary lang="ja">LINE Notify ラッパー</summary>
    <description lang="en">Send message to LINE Notify</description>
    <description lang="ja">LINE Notifyへメッセージを送信します</description>
    <website>http://kodiful.com/</website>
