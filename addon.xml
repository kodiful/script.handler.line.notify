<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.line.notify.handler"
       name="LINE Notify Handler"
       version="1.0"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">LINE Notify Handler</summary>
    <summary lang="ja">LINE Notify ハンドラー</summary>
    <description lang="en">Send message to LINE Notify</description>
    <description lang="ja">LINE Notifyへメッセージを送信します</description>
    <disclaimer lang="en">Tested on macOS</disclaimer>
    <disclaimer lang="ja">macOSでの動作を確認</disclaimer>
    <website>http://kodiful.com/</website>
  </extension>
</addon>
